pipeline {
    agent any
    tools {
        maven 'Maven-3.9.5'
    }
    stages {
        // The Checkout stage has been removed.
        
        stage('Build & Test') {
            steps {
                // Use a multi-line batch script
                bat '''
                    echo "Changing directory to javamaven..."
                    cd javamaven
                    echo "Running build in %CD%..."
                    mvn clean package
                '''
            }
        }
        stage('Archive Artifact') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }
}
